<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:yidont="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/cg_bgd"
              android:orientation="vertical">


    <FrameLayout
        android:id="@+id/wholecity_buy_framement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"></FrameLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dp">

        <LinearLayout
            android:id="@+id/wholecity_buy_conduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/elife_wifi_ico"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/colour_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="色彩"
                android:textColor="@drawable/selector_elife_color"
                android:textSize="@dimen/TxtSizeSmall"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/wholecity_buy_crazy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/elife_send_ico"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/screen_selector"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="情景"
                android:textColor="@drawable/selector_elife_color"
                android:textSize="@dimen/TxtSizeSmall"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

